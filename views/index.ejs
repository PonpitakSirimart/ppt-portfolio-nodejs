<script>
const carouselContainer = document.querySelector('.carousel-container');
const itemAngle = 360 / carouselContainer.children.length;

Array.from(carouselContainer.children).forEach((item, index) => {
    const rotateY = itemAngle * index;
    item.style.transform = `rotateY(${rotateY}deg) translateZ(300px)`;
});
</script>
<style>
    .carousel-container {
        width: 600px;
        height: 400px;
        position: relative;
        transform-style: preserve-3d;
        transform: rotateY(0deg);
        animation: rotateCarousel 10s infinite linear;
        perspective: 800px;
    }

    .carousel-item {
        position: absolute;
        width: 300px;
        height: 400px;
        padding: 20px;
        background-color: white;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        transform-style: preserve-3d;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    .carousel-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        margin-bottom: 10px;
    }

    @keyframes rotateCarousel {
        0% {
            transform: rotateY(0deg);
        }
        100% {
            transform: rotateY(360deg);
        }
    }
</style>
